<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Заголовок -->
    <TextView
        android:id="@+id/recognitionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Результат распознавания"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"/>

    <!-- Изображение распознанного объекта -->
    <ImageView
        android:id="@+id/recognizedImage"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:contentDescription="Распознанный объект"
        android:layout_marginBottom="20dp"/>
    <!--android:src=""-->

    <!-- Информация о распознанном объекте -->
    <TextView
        android:id="@+id/recognizedInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Информация о распознанном объекте:..."
        android:textSize="18sp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:scrollHorizontally="false"
        android:maxLines="5"
        android:ellipsize="end"
        android:padding="16dp"
        android:lineSpacingExtra="8dp"/>

    <!-- Вертикальный отступ перед кнопками -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="180dp" />

    <!-- Кнопки для повторного распознавания и других действий -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:gravity="center">

        <!-- Кнопка для выбора изображения -->
        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:src="@drawable/cameraa"
            android:background="@null"
            android:scaleType="fitCenter"
            android:contentDescription="Назад"
            android:padding="12dp"/>

        <!-- Кнопка для повторного распознавания -->
        <ImageButton
            android:id="@+id/retryButton"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:src="@drawable/reload"
            android:background="@null"
            android:scaleType="fitCenter"
            android:contentDescription="Повторить распознавание"
            android:padding="12dp"/>

        <!-- Кнопка для завершения -->
        <ImageButton
            android:id="@+id/historyButton"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:src="@drawable/history"
            android:background="@null"
            android:scaleType="fitCenter"
            android:contentDescription="История распознавания"
            android:padding="12dp"/>
    </LinearLayout>



</LinearLayout>
